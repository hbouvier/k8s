apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: rabbitmq
  annotations:
    kubernetes.io/ingress.class: nginx
    # ingress.kubernetes.io/rewrite-target: /
    # Add to generate certificates for this ingress
    kubernetes.io/tls-acme: 'true'
  labels:
    app: message-bus
    component: rabbitmq
    role: broker
spec:
  rules:
    - host: "rabbitmq.{{ cluster_name }}.{{ domain }}"
      http:
        paths:
          - backend:
              serviceName: rabbitmq
              servicePort: 15672
            path: /
  tls:
    # With this configuration kube-lego will generate a secret in namespace foo called `example-tls`
    # for the URL `www.example.com`
    - hosts:
        - "rabbitmq.{{ cluster_name }}.{{ domain }}"
      secretName: "rabbitmq.{{ cluster_name }}.{{ domain }}.tls"
