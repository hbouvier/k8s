apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: "{{ proxy.name }}-oauth2"
  labels:
    app: "{{ proxy.name }}"
    component: "{{ proxy.name }}-oauth2"
  annotations:
    kubernetes.io/ingress.class: nginx
    # ingress.kubernetes.io/rewrite-target: /
    # Add to generate certificates for this ingress
    kubernetes.io/tls-acme: 'true'
spec:
  rules:
    - host: "{{ proxy.name }}.{{ cluster_name }}.{{ domain }}"
      http:
        paths:
        - path: /
          backend:
            serviceName: "{{ proxy.name }}-oauth2"
            servicePort: 4180
  tls:
    # With this configuration kube-lego will generate a secret in namespace foo called `example-tls`
    # for the URL `www.example.com`
    - hosts:
        - "{{ proxy.name }}.{{ cluster_name }}.{{ domain }}"
      secretName: "{{ proxy.name }}.{{ cluster_name }}.{{ domain }}.tls"
