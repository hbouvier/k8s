    "jasmine": "^2.5.3",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "basic-auth-connect": "^1.0.0",
    "mirv": "^0.0.6"
  },
  "engines": {
    "node": "7.2.x"
  }
}
