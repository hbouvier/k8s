{
  "name": "couchdb-k8s-bootstrap",
  "version": "0.0.1",
  "description": "Bootstrap a Couchdb cluster",
  "main": "./bootstrap",
  "bin": {
    "bootstrap": "./bootstrap"
  },
  "scripts": {
